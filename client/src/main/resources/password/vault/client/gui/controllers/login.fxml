<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TabPane fx:id="tabPane" prefHeight="720.0" prefWidth="1280.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="password.vault.client.gui.controllers.LoginController">
   <tabs>
      <Tab fx:id="tabLogin" text="Login">
         <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="570.0" prefWidth="870.0">
               <children>
                  <VBox alignment="CENTER" layoutX="406.0" layoutY="149.0" prefHeight="254.0" prefWidth="469.0">
                     <children>
                        <TextField fx:id="txtUsername" alignment="CENTER" promptText="Username">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <PasswordField fx:id="txtPassword" alignment="CENTER" promptText="Password">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </PasswordField>
                        <Button fx:id="btnLogin" alignment="CENTER" mnemonicParsing="false" onAction="#btnLoginClicked" prefWidth="98.0" text="Login">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Hyperlink fx:id="hypRegistration" onAction="#hypRegistrationPressed" text="Create an account">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </Hyperlink>
                     </children>
                  </VBox>
                  <Button fx:id="btnExit" layoutX="1187.0" layoutY="640.0" mnemonicParsing="false" onAction="#btnExitClicked" prefHeight="22.0" prefWidth="79.0" text="Exit">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Button>
                  <Label layoutX="519.0" layoutY="41.0" text="Password vault" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="34.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
               </padding>
            </AnchorPane>
         </content>
      </Tab>
   </tabs>
</TabPane>
